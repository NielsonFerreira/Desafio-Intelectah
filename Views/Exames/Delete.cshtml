@model Desafio_Intelectah.Models.Exame

@{
    ViewBag.Title = "Deletar";
}

<h2>Deletar</h2>

<h3>Você tem certeza que deseja deletar o exame abaixo?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label>Nome</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nome)
        </dd>

        <dt>
            <label>Observações</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.observacoes)
        </dd>

        <dt>
            <label>Tipo de Exame</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tipo_de_exame.nome)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>
